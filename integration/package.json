{
  "name": "@eventific/integration-test",
  "version": "0.2.0",
  "main": "lib/index.js",
  "author": "Joatin Granlund <granlundjoatin@icloud.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretest": "rimraf data && tsc --noEmit",
    "test": "concurrently --raw --success first --kill-others -n docker,jest \"docker-compose up\" \"jest --colors --logHeapUsage --forceExit --silent --verbose\""
  },
  "dependencies": {
    "@eventific/command": "^0.2.0",
    "@eventific/core": "^0.2.0",
    "@eventific/saga": "^0.2.0",
    "@eventific/test": "^0.2.0",
    "@eventific/rabbit-transport": "^0.2.0",
    "@types/jest": "^22.1.0",
    "jest": "^22.1.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/node": "^9.3.0",
    "axios": "^0.17.1",
    "concurrently": "^3.5.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(e2e).{ts}",
      "<rootDir>/**/__tests__/**/*.{ts}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|ts)$"
    ]
  }
}
