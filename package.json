{
  "name": "@eventific/eventific",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "lint": "tslint packages/**/*.ts -e **/*.tests.ts -e **/lib/*",
    "cz": "git cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.1",
    "lerna": "^2.7.0",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.14.0"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test|specs|tests|e2e).{js,ts}",
      "<rootDir>/**/__tests__/**/*.{js,ts}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|ts)$"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "autoFix": true
    }
  }
}
