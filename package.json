{
  "name": "@eventific/eventific",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/eventific/eventific.git"
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "pretest": "yarn build",
    "pretest:watch": "yarn build",
    "pretest:e2e": "yarn build",
    "test": "jest --notify --testPathPattern packages",
    "test:e2e": "jest --notify --testPathPattern integration",
    "test:watch": "jest --watch --notify --testPathPattern packages",
    "lint": "tslint packages/**/*.ts -e **/*.tests.ts -e **/lib/*",
    "cz": "git cz",
    "ci:publish": "lerna publish --conventional-commits --yes --allow-branch master --npm-client npm",
    "ci:publish:dev": "lerna publish --canary --yes --allow-branch develop --npm-client npm",
    "precommit": "yarn test",
    "build": "lerna run build",
    "serve:docs": "cd docs && bundle exec jekyll serve"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "integration/*"
  ],
  "devDependencies": {
    "bithound": "^1.7.0",
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lerna": "^2.7.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.14.0"
  },
  "jest": {
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/**/*.{ts,tsx}",
      "!packages/**/*.d.ts",
      "!packages/**/lib/*",
      "!packages/**/es5/*",
      "!packages/**/es2015/*",
      "!packages/**/es2016/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test|specs|tests|e2e).{ts}",
      "<rootDir>/**/__tests__/**/*.{ts}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "lib"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|ts)$"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "autoFix": true
    }
  },
  "dependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.1.4"
  }
}
